<Window x:Class="ToTheLicense.ManageLessons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ניהול שיעורים"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F7F9FC"
        FontFamily="Segoe UI"
        FlowDirection="RightToLeft">

    <Grid>
        <Grid.RowDefinitions>
            <!-- פס עליון -->
            <RowDefinition Height="Auto"/>
            <!-- תוכן -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== פס עליון ===== -->
        <Border Grid.Row="0" Background="#2B4A9B" Height="60" CornerRadius="0">
            <Grid>
                <!-- כפתור חזור (ימין) -->
                <Button Content="⬅ חזור לדף הבית"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Padding="10,6"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click" Margin="5,0,0,0"/>

                <!-- כותרת במרכז -->
                <TextBlock Text="📅 ניהול שיעורים"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ===== תוכן הדף ===== -->
        <ScrollViewer Grid.Row="1" Margin="20,20,20,20" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="LessonsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="8" Padding="14"
                                CornerRadius="12"
                                BorderBrush="#2B4A9B"
                                BorderThickness="1.5"
                                Background="White">
                            <StackPanel>
                                <!-- שם תלמיד -->
                                <TextBlock Text="{Binding StudentName}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#D89C00"
                                           Margin="0,0,0,6"/>

                                <!-- פרטי שיעור -->
                                <TextBlock Text="{Binding VehicleType}"
                                           FontSize="16" FontWeight="Bold" Foreground="#002366"/>
                                <TextBlock Text="{Binding Location}" FontSize="14" Foreground="#444" Margin="0,2,0,0"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="🕓 " FontSize="14"/>
                                    <TextBlock Text="{Binding StartTime, StringFormat='התחלה: {0:HH:mm}'}" FontSize="14"/>
                                    <TextBlock Text="  ⇐  " FontSize="14"/>  <!-- ← שינוי כאן: החץ שמאלה -->
                                    <TextBlock Text="{Binding EndTime, StringFormat='סיום: {0:HH:mm}'}" FontSize="14"/>

                                </StackPanel>

                                <TextBlock Text="{Binding Status}" FontSize="13" Foreground="Gray" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
