<Window x:Class="ToTheLicense.FindTeacher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="חיפוש מורה"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F7F9FC"
        FontFamily="Segoe UI"
        FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Background="#2B4A9B" CornerRadius="0" Height="60">
            <DockPanel VerticalAlignment="Center">
                <!-- כפתור חזרה -->
                <Button Content="⬅ חזור"
                        Click="BackButton_Click"
                        Foreground="White"
                        Background="Transparent"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Padding="10,6"
                        Cursor="Hand"
                        DockPanel.Dock="Right"/>

                <!-- כותרת -->
                <TextBlock Text="🔍 מציאת מורים זמינים"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,60,0"/>
            </DockPanel>
        </Border>

        <!-- ===== SEARCH FIELDS ===== -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
            <StackPanel Margin="5">
                <TextBlock Text="עיר / מיקום:" Foreground="#333" FontWeight="Bold"/>
                <TextBox x:Name="LocationTextBox" Width="150" Padding="6"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="סוג רכב:" Foreground="#333" FontWeight="Bold"/>
                <TextBox x:Name="VehicleTextBox" Width="150" Padding="6"/>
            </StackPanel>

            <Button Content="חפש"
                    Click="SearchButton_Click"
                    Background="#FFD700"
                    Foreground="#222"
                    FontWeight="Bold"
                    Padding="10,6"
                    Margin="10,22,0,0"
                    Cursor="Hand"
                    BorderThickness="0"/>
        </StackPanel>

        <!-- ===== RESULTS ===== -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TeachersList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Padding="14"
                                CornerRadius="12"
                                BorderBrush="#2B4A9B"
                                BorderThickness="1.5"
                                Background="White">
                            <StackPanel>
                                <TextBlock Text="{Binding FullName}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#D89C00"
                                           Margin="0,0,0,4"/>

                                <TextBlock Text="{Binding VehicleType}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#002366"/>

                                <TextBlock Text="{Binding Location}"
                                           FontSize="14"
                                           Foreground="#555"
                                           Margin="0,2,0,0"/>

                                <TextBlock Text="{Binding LessonPrice, StringFormat='מחיר: ₪{0:F0}'}"
                                           FontSize="14"
                                           Foreground="#333"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
