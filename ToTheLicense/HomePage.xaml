<Window x:Class="ToTheLicense.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="לרישיון - דף הבית"
        Height="640" Width="980"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#F7F9FC"
        FontFamily="Segoe UI"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <!-- צבעים -->
        <SolidColorBrush x:Key="BlueBrush" Color="#002366"/>
        <!-- כחול כהה (לוגו) -->
        <SolidColorBrush x:Key="BlueLightBrush" Color="#2B4A9B"/>
        <!-- כחול בהיר יותר -->
        <SolidColorBrush x:Key="YellowBrush" Color="#FFDDA800"/>
        <!-- צהוב -->
        <SolidColorBrush x:Key="TextDark" Color="#222222"/>
        <SolidColorBrush x:Key="CardBg" Color="White"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E6E9EF"/>

        <!-- סטייל לכפתורי עליון (שטוחים) -->
        <Style x:Key="HeaderFlatButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- כפתור סגירה סטטי (X) -->
        <Style x:Key="CloseButtonStatic" TargetType="Button" BasedOn="{StaticResource HeaderFlatButton}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- כרטיס פעולה -->
        <Style x:Key="ActionCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.08" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- כפתור פעולה בתוך כרטיס -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Background="{StaticResource BlueBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- לוגו + כותרת + ברוך הבא -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="18,0">
                <!-- לוגו "ל" בסגנון של תמרור הלומד -->
                <Grid Width="56" Height="56" Margin="0,0,12,0">
                    <Rectangle Fill="{StaticResource BlueLightBrush}" RadiusX="10" RadiusY="10"/>
                    <Polygon Points="28,6 8,46 48,46" Fill="White"/>
                    <TextBlock Text="ל"
                               FontSize="32" FontWeight="Bold" Foreground="Black"
                               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,0,0"/>
                </Grid>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="לרישיון" Foreground="White" FontSize="22" FontWeight="Bold"/>
                    <TextBlock x:Name="WelcomeNameText"
                               Text="ברוך הבא, משתמש"
                               Foreground="#F1F4FF" FontSize="13" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- כפתורי עליון -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                <Button Content="התנתק" Click="Logout_Click" Style="{StaticResource HeaderFlatButton}" Margin="0,0,6,0"/>
                <Button Content="X" Click="Close_Click" Style="{StaticResource CloseButtonStatic}"/>
            </StackPanel>
        </Grid>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="18,16,18,24">

                <!-- שורת טייטל -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="2,0,2,8">
                    <TextBlock Text="מה תרצה לעשות היום?"
                               Foreground="{StaticResource TextDark}"
                               FontSize="20" FontWeight="Bold" />
                    <Border Background="{StaticResource YellowBrush}" CornerRadius="6" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="דף הבית" Foreground="#222"/>
                    </Border>
                </StackPanel>

                <!-- כרטיסים -->
                <WrapPanel ItemWidth="280" ItemHeight="Auto">
                    <!-- ניהול שיעורים -->
                    <Border Style="{StaticResource ActionCard}" Width="280">
                        <StackPanel>
                            <TextBlock Text="📅 ניהול שיעורים" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                            <TextBlock Text="צפה, קבע או בטל שיעורים בקלות."
                                       Foreground="#606A7A" Margin="0,6,0,14"/>
                            <Button Content="למסך ניהול שיעורים" Style="{StaticResource PrimaryButton}" Click="ManageLessons_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- מציאת מורים זמינים -->
                    <Border Style="{StaticResource ActionCard}" Width="280">
                        <StackPanel>
                            <TextBlock Text="🚗 מציאת מורים זמינים" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                            <TextBlock Text="סינון לפי מיקום, מחיר, סוג רכב ודירוג."
                                       Foreground="#606A7A" Margin="0,6,0,14"/>
                            <Button Content="חפש מורה" Style="{StaticResource PrimaryButton}" Click="FindTeachers_Click"/>

                        </StackPanel>
                    </Border>

                    <!-- תשלומים -->
                    <Border Style="{StaticResource ActionCard}" Width="280">
                        <StackPanel>
                            <TextBlock Text="💳 תשלומים ויתרות" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                            <TextBlock Text="היסטוריית תשלומים, יתרה וקבלות."
                                       Foreground="#606A7A" Margin="0,6,0,14"/>
                            <Button Content="למסך תשלומים" Style="{StaticResource PrimaryButton}" Click="Payments_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- הפרופיל שלי -->
                    <Border Style="{StaticResource ActionCard}" Width="280">
                        <StackPanel>
                            <TextBlock Text="👤 הפרופיל שלי" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                            <TextBlock Text="עדכון פרטים אישיים, סוג רכב מועדף ועוד."
                                       Foreground="#606A7A" Margin="0,6,0,14"/>
                            <Button Content="פתח פרופיל" Style="{StaticResource PrimaryButton}" Click="Profile_Click"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
